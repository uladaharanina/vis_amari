<section class="slider">
    <div class="slider-wrapper">
        <img src="./preview/1.jpg" alt="Image 1" loading="lazy" >
        <img src="./preview/2.jpg" alt="Image 2" loading="lazy" >
        <img src="./preview/3.jpg" alt="Image 3" loading="lazy" >
        <img src="./preview/4.jpg" alt="Image 4" loading="lazy" >
        <img src="./preview/5.jpg" alt="Image 5" loading="lazy" >
        <img src="./preview/6.jpg" alt="Image 6" loading="lazy" >
        <img src="./preview/7.jpg" alt="Image 7" loading="lazy" >

    </div>
</section>


<style>
    .slider {
        position: relative;
        overflow: hidden;
        width: 100%;
        margin: 15em 0;
    }

    .slider-wrapper {
        display: flex;
        transition:all 0.5s ease-in-out;
        gap:40px;
        width: calc(100% * 7 / 4); /* Adjusted for 7 images */
    }

    .slider img {
        width: calc(100% / 4); /* Show 5 images at a time */
        flex-shrink: 0; /* Prevent images from shrinking */
        object-fit: cover;
        width:383px;
        max-height: 610px; /* Adjust as needed */
    }
</style>



<script>
    const sliderWrapper = document.querySelector('.slider-wrapper');
    const images = document.querySelectorAll('.slider img');
    const totalImages = images.length;
    const imagesToShow = 5;
    let currentIndex = 0;

    function showNextImages() {
        currentIndex = (currentIndex + 1) % (totalImages - imagesToShow + 1);
        const offset = -currentIndex * (100 / imagesToShow); // Calculate offset based on images to show
        sliderWrapper.style.transform = `translateX(${offset}%)`;
    }

    setInterval(showNextImages, 2000); // Change images every 3 seconds
</script>
