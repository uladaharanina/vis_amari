<script>
window.addEventListener('load', () => {
  const carouselWrapper = document.querySelector('#carouselTargetList');
  const images = carouselWrapper.querySelectorAll('img');
  const itemWidth = images[0].offsetWidth + 10;  
  let speed = 1;
  let scrollPosition = 0;
  let delay = 3000;  // Delay between scrolls in milliseconds (1.5 seconds)

  // Ensure we have at least one image to calculate width
  let isReachedTheEnd = false;

  // Function to move the carousel smoothly
  function moveCarousel() {

    if(scrollPosition <= carouselWrapper.scrollWidth && isReachedTheEnd){

      if(scrollPosition < 200){
        isReachedTheEnd = false;
      }
    }
    else if (scrollPosition >= carouselWrapper.scrollWidth) {
      // If we reached the end, reset to the start
      isReachedTheEnd = true;
      scrollPosition -= itemWidth * speed;
      //scrollPosition
    }
    else{
      // Increment the scroll position
      scrollPosition += itemWidth * speed;
    }


    // Apply the smooth scrolling effect by using translateX
    carouselWrapper["style"].transition = 'transform 1.2s ease-in-out';  // Smooth transition for scrolling
    carouselWrapper["style"].transform = `translateX(-${scrollPosition}px)`;  // Move the carousel

    // Continue moving the carousel
    setTimeout(moveCarousel, delay);
  }

  // Function to move the carousel in desktop

  function moveCarouselDesktop(){
    setInterval(() => {
      console.log("50")
      // Check if we have reached the end of the carousel
    if (scrollPosition >= carouselWrapper.scrollWidth - carouselWrapper.clientWidth || isReachedTheEnd) {
      // Reset the scroll position and increase the miniStep for faster scrolling
      isReachedTheEnd = true;
      scrollPosition -= itemWidth;
      if(scrollPosition < 200){
        scrollPosition = 0;
        isReachedTheEnd = false;
      }
    } else {
      // Scroll to the right
      scrollPosition += itemWidth;  // Move right by image width + miniStep
    }
    carouselWrapper.scrollTo({
      left: scrollPosition,
      behavior: 'smooth',
    });
    }, delay)
  }

  /*MOBILE */

    if(window.innerWidth < 400){
      setTimeout(moveCarousel, 2500);
    }
    /**DESKTOP */
    else{
      moveCarouselDesktop();
    }
     
});



</script>
  