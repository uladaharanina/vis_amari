<script>
window.addEventListener('load', () => {
  const carouselWrapper = document.querySelector('#carouselTargetList');
  const images = carouselWrapper.querySelectorAll('img');

  let scrollPosition = 0;
  let miniStep = 0;  // Start with no mini step
  const delay = 1500;  // Delay between scrolls in milliseconds (1.5 seconds)

  // Ensure we have at least one image to calculate width
  const imageWidth = images.length > 0 ? images[0].offsetWidth : 220;  // Default to 220 if no images are found
  let isReachedTheEnd = false;
  setInterval(() => {
    // Check if we have reached the end of the carousel
    if (scrollPosition >= carouselWrapper.scrollWidth - carouselWrapper.clientWidth || isReachedTheEnd) {
      // Reset the scroll position and increase the miniStep for faster scrolling
      isReachedTheEnd = true;
      scrollPosition -= imageWidth + miniStep;
      miniStep += 10;  // Increase miniStep to make the scroll move faster next time
      if(scrollPosition < 100){
        scrollPosition = 0;
        isReachedTheEnd = false;
      }
    } else {
      // Scroll to the right
      scrollPosition += imageWidth + miniStep;  // Move right by image width + miniStep
    }

    // Scroll with smooth behavior
    carouselWrapper.scrollTo({
      left: scrollPosition,
      behavior: 'smooth',
    });
  }, delay);
});

    
  </script>
  